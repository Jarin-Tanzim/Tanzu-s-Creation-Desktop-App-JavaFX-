<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" stylesheets="@admin_panel.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.Add_productController">
    <padding>
        <Insets bottom="20" left="40" right="40" top="20" />
    </padding>
    <Label prefHeight="27.0" prefWidth="481.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: pink;" text="                                  Add New Product" />
    <TextField fx:id="productNameField" promptText="Product Name">
      <font>
         <Font name="Arial" size="12.0" />
      </font></TextField>
    <TextField fx:id="productPriceField" promptText="Price" />
    <TextField fx:id="productImageField" promptText="Image URL" />
    <TextArea fx:id="productDescField" prefRowCount="2" promptText="Description" />
    <Button onAction="#handleAddProduct" prefHeight="36.0" prefWidth="170.0" style="-fx-background-color: #3498db;" styleClass="logout-button" text="Add Product" />
   <Button onAction="#handleback" style="-fx-background-color: #3498db;" styleClass="logout-button" text="Back" />
</VBox>
