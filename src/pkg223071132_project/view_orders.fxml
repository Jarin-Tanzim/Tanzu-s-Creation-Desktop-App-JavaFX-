<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" style="-fx-background-color: #ffe6f0;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.View_ordersController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Order List" />

    <TableView fx:id="orderTable" prefHeight="500" prefWidth="800" style="-fx-border-color: red;">
        <columns>
            <TableColumn fx:id="orderIdColumn" prefWidth="100" text="Order ID" />
            <TableColumn fx:id="userColumn" prefWidth="150" text="User" />
            <TableColumn fx:id="productColumn" prefWidth="200" text="Product" />
            <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantity" />
            <TableColumn fx:id="totalPriceColumn" prefWidth="150" text="Total Price" />
        </columns>
    </TableView>

    <Button onAction="#handleBackToAdmin" text="Back to Admin Panel" />
</VBox>
