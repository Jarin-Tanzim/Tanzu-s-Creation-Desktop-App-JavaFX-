<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="380.0" prefWidth="400.0" stylesheets="@forgot_password.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.Forgot_passwordController">
   <children>
      <Label layoutX="120.0" layoutY="20.0" styleClass="title-label" text="Forgot Password" textAlignment="CENTER">
         <font>
            <Font size="22" />
         </font>
      </Label>

      
      <Label fx:id="emailLabel" layoutX="30.0" layoutY="70.0" styleClass="field-label" text="Enter your registered email:" />
      <TextField fx:id="emailField" layoutX="30.0" layoutY="95.0" prefWidth="340.0" promptText="Email" styleClass="input-field" />

      <Button fx:id="emailSubmitButton" layoutX="150.0" layoutY="135.0" mnemonicParsing="false" onAction="#handleEmailSubmit" styleClass="primary-button" text="Next" />

      
      <Label fx:id="securityQuestionLabel" layoutX="30.0" layoutY="180.0" prefWidth="340.0" styleClass="field-label" visible="false" wrapText="true" />
      <TextField fx:id="securityAnswerField" layoutX="30.0" layoutY="210.0" prefWidth="340.0" promptText="Your Answer" styleClass="input-field" visible="false" />

      <Button fx:id="answerSubmitButton" layoutX="150.0" layoutY="245.0" mnemonicParsing="false" onAction="#handleAnswerSubmit" styleClass="primary-button" text="Verify" visible="false" />

      
      <Label fx:id="resetPassLabel" layoutX="30.0" layoutY="180.0" styleClass="field-label" text="Enter new password:" visible="false" />
      <PasswordField fx:id="newPasswordField" layoutX="30.0" layoutY="210.0" prefWidth="340.0" promptText="New Password" styleClass="input-field" visible="false" />
      <PasswordField fx:id="confirmPasswordField" layoutX="30.0" layoutY="245.0" prefWidth="340.0" promptText="Confirm Password" styleClass="input-field" visible="false" />
      <Button fx:id="resetPasswordButton" layoutX="150.0" layoutY="280.0" mnemonicParsing="false" onAction="#handleResetPassword" styleClass="primary-button" text="Reset Password" visible="false" />

      
      <Label fx:id="messageLabel" layoutX="37.0" layoutY="305.0" prefWidth="340.0" styleClass="message-label" textAlignment="CENTER" textFill="#D32F2F" wrapText="true" />

      
      <Button layoutX="140.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleBackToLogin" styleClass="secondary-button" text="Back to Login" />
   </children>
</AnchorPane>
