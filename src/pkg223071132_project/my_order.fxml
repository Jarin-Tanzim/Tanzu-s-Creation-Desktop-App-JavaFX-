<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox alignment="TOP_CENTER" spacing="18" style="-fx-background-color: pink; -fx-border-color: red;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.My_orderController">

    <padding>
        <Insets bottom="28" left="28" right="28" top="28" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="My Orders" />

    <ScrollPane fitToWidth="true" fitToHeight="true" prefWidth="800" prefHeight="450">
    <content>
        <TableView fx:id="orderTable" prefWidth="800" prefHeight="420">
            <columns>
                <TableColumn fx:id="imageColumn" text="Image" prefWidth="90"/>
                <TableColumn fx:id="productNameColumn" text="Product" prefWidth="180"/>
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="90"/>
                <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="120"/>
            </columns>
        </TableView>
    </content>
</ScrollPane>

    <Button onAction="#handleBack" style="-fx-font-size: 14px;" text="Back" />
</VBox>
