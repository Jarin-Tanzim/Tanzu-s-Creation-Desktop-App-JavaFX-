<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="18" style="-fx-background-color: #ffe6f0;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.My_orderController">

    <padding>
        <Insets bottom="28" left="28" right="28" top="28" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="My Orders" />

    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="450" prefWidth="800">
    <content>
        <TableView fx:id="orderTable" prefHeight="420" prefWidth="800">
            <columns>
                <TableColumn fx:id="imageColumn" prefWidth="90" text="Image" />
                <TableColumn fx:id="productNameColumn" prefWidth="180" text="Product" />
                <TableColumn fx:id="quantityColumn" prefWidth="90" text="Quantity" />
                <TableColumn fx:id="totalPriceColumn" prefWidth="120" text="Total Price" />
            </columns>
        </TableView>
    </content>
</ScrollPane>

    <Button onAction="#handleBack" style="-fx-font-size: 14px;" text="Back" />
</VBox>
