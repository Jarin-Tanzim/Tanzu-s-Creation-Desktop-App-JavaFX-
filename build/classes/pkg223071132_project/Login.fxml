<AnchorPane id="AnchorPane" fx:id="loginbutton" prefHeight="500.0" prefWidth="400.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg223071132_project.LoginController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="126.0" styleClass="label-title" text="Log in to Tanzu's Creation " textFill="#f402a7">
         <font>
            <Font name="Berlin Sans FB" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="usernamefield" layoutX="125.0" layoutY="180.0" promptText="Enter Email" styleClass="text-field" />
      <PasswordField fx:id="passwordfield" layoutX="125.0" layoutY="224.0" promptText="Enter Password" styleClass="password-field" />
      <Button fx:id="loginButton" layoutX="161.0" layoutY="263.0" mnemonicParsing="false" onAction="#handlelogin" text="Log in" />
      <Label fx:id="errorlabel" alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="314.0" prefHeight="17.0" prefWidth="200.0" textAlignment="CENTER" textFill="#ef0a0a" wrapText="true">
         <styleClass>
            <String fx:value="error-label" />
            <String fx:value="success-label" />
         </styleClass>
      </Label>
      <ImageView fitHeight="98.0" fitWidth="135.0" layoutX="151.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/Official%20Logo.png" />
         </image>
      </ImageView>
      <Hyperlink fx:id="GoTosignup" layoutX="109.0" layoutY="319.0" onAction="#handleGoTosign" text="Don't have an account? Register here" />
   </children>
</AnchorPane>
